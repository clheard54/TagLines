<%= form_for @user do |f| %>
    <p><font size='4'><%= f.label :first_name %></font>
    <%= f.text_field :first_name %></p>
  
    <p><font size='4'><%= f.label :last_name %></font>
    <%= f.number_field :last_name %></p>
  
    <p><font size='4'><%= f.label :email %></font>
    <%= f.text_field :email %></p>
  
    <p><font size='4'><%= f.label :user_name %></font>
    <%= f.text_field :user_name %></p>
    Apologies, you are not able to change your password at this time.

    <p><font size='4'><%= f.label :fave_book %></font>
    <%= f.number_field :fave_book %></p>
  
    <p><font size='4'><%= f.label :fave_movie %></font>
    <%= f.number_field :fave_movie %></p>
  
    <%= f.submit "Update" %>
      <% end %>
  
    <% if flash[:notice] %>
      <% flash[:notice].each {|msg| %>
        <%= msg %>
      <% } %>
      <% end %>